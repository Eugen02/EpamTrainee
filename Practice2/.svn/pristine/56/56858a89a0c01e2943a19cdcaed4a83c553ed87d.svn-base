package ua.nure.chekhunov.practice2;

import java.util.Iterator;
import java.util.ConcurrentModificationException;

/**
 * @author macbookpro Create class ArrayImpl which implements for class Array
 */
public class ArrayImpl implements Array {

	/**
	 * Mod count.
	 */
	private int modCount;

	/**
	 * Current position to index array.
	 */
	private int pointer;

	/**
	 * {@link Object}.
	 */
	private Object[] arr = {};

	{
		modCount = 0;
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov
	 */
	@Override
	public int size() {

		return toArray().length;

	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov.Practice2.ListIterable#listIterator()
	 */
	@Override
	public Iterator<Object> iterator() {

		return new IteratorImpl();

	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov
	 */
	@Override
	public void add(Object element) {

		Object[] arr2 = new Object[arr.length + 1];
		System.arraycopy(arr, 0, arr2, 0, arr.length);
		arr2[arr2.length - 1] = element;
		arr = arr2;

	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov
	 */
	@Override
	public void set(int index, Object element) {

		arr[index] = element;

	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov
	 */
	@Override
	public Object get(int index) {

		return arr[index];

	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov
	 */
	@Override
	public int indexOf(Object element) {

		int returnvalue = -1;
		for (int i = 0; i < arr.length; ++i) {
			if (element == arr[i]) {
				returnvalue = i;
				break;
			}
		}

		return returnvalue;
	}

	/**
	 * Removes the element at the specified position in this list. Shifts any
	 * subsequent elements to the left (subtracts one from their indices).
	 *
	 * @param index the index of the element to be removed.
	 * @throws IndexOutOfBoundsException {@inheritDoc}.
	 */
	@Override
	public void remove(int index) {

		restructMyList(index);
	}

	/**
	 * Restructuring collections. Move item collections.
	 * 
	 * @param index - restructuring period.
	 */
	private void restructMyList(final int index) {

		modCount++;

		if (index == size() - 1) {
			arr[index] = null;

		} else {
			int lengthCopy = size() - index - 1;
			System.arraycopy(arr, index + 1, arr, index, lengthCopy);
		}

		pointer--;

		if (pointer == (arr.length / 4)) {
			resize(pointer + (arr.length / 4));
		}
	}

	/**
	 * Change length collections.
	 * 
	 * @param len - length new object.
	 */
	private void resize(final int len) {

		Object[] temp = new Object[len];
		System.arraycopy(arr, 0, temp, 0, pointer);
		arr = temp;
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov
	 */
	@Override
	public void clear() {

		arr = new Object[] {};

	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov
	 */
	@Override
	public Object[] toArray() {

		Object[] array = this.arr;

		return array;
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov
	 */

	@Override
	public String toString() {

		StringBuilder sb = new StringBuilder();
		sb.append("[");
		for (int i = 0; i < toArray().length; i++) {
			if (toArray()[i] == null) {
				sb.append("[" + "null" + "]");
				continue;
			}
			sb.append("" + toArray()[i].toString() + "");
			if (i != size() - 1) {
				sb.append(", ");
			}
		}
		sb.append("]");
		return sb.toString();

	}

	private class IteratorImpl implements Iterator<Object> {

		private int expectedModCount;
		private int currentIndex = 0;
		private int pointer = -1;
		private boolean nextOrPrevious = false;
		private boolean flag = true;

		{
			expectedModCount = ArrayImpl.this.modCount;
		}

		public int getPointer() {
			return pointer;
		}

		public void setPointer(int pointer) {
			this.pointer = pointer;
		}

		public boolean isNextOrPrevious() {
			return nextOrPrevious;
		}

		public void setNextOrPrevious(boolean nextOrPrevious) {
			this.nextOrPrevious = nextOrPrevious;
		}

		public boolean isFlag() {
			return flag;
		}

		public void setFlag(boolean flag) {
			this.flag = flag;
		}

		/*
		 * (non-Javadoc)
		 * 
		 * @see ua.nure.chekhunov
		 */
		@Override
		public boolean hasNext() {

			if (pointer < toArray().length - 1) {
				return true;
			}
			return false;
		}

		/*
		 * (non-Javadoc)
		 * 
		 * @see ua.nure.chekhunov
		 */
		@Override
		public Object next() {

			flag = false;
			nextOrPrevious = false;
			return toArray()[++pointer];

		}

		/*
		 * (non-Javadoc)
		 * 
		 * @see ua.nure.chekhunov
		 */
		@Override
		public void remove() {

			if (pointer < 0) {
				throw new IllegalStateException("remove: Not does not indicate which item");
			}
			checkForComodification();
			ArrayImpl.this.remove(pointer);
			if (pointer < currentIndex) {
				currentIndex--;
			}
			expectedModCount = modCount;
			pointer = -1;
		}

		/**
		 * Check modifications object state.
		 */
		final void checkForComodification() {

			if (modCount != expectedModCount) {
				throw new ConcurrentModificationException();
			}
		}

	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see ua.nure.chekhunov
	 */
	public static void main(String[] args) {

		Array con = new ArrayImpl();
		// add
		con.add("A");
		con.add("B");
		con.add("C");
		System.out.println(con);

		// add

		con.set(1, "d");
		System.out.println(con);

		con.set(0, "b");
		System.out.println(con);
		// size
		con.size();

		// addset
		con.set(0, "C");

		// indexof
		System.out.println(con.indexOf("C"));
		con.add(888);

		// get
		con.get(1);
		con.add(new Object());

		// remove item
		con.remove(0);

		// show toString
		System.out.println("Show con: " + con);

		// add item
		String str = "rere";
		con.add(str);

		// clear
		con.clear();

		Array con1 = new ArrayImpl();
		con1.add("A");
		con1.add("B");
		con1.add("C");

		// remove index
		con1.remove(0);
		con1.remove(con1.size() - 1);

		// toString
		System.out.println("\nShow con: " + con);
		System.out.println("Show remove first and last item con1: " + con1);

		// add item
		str += "2316";
		con1.add(str);
		System.out.println("\ncon: " + con);
		System.out.println("con1: " + con1);

		System.out.println("\nShow foreach iterator:");
		// foreach iterator
		for (Object o : con) {
			System.out.print(o + " ");
		}

		System.out.println("Show while iterator: ");
		Iterator<Object> it = con.iterator();
		// while iterator
		while (it.hasNext()) {
			System.out.print(it.next() + " ");
		}

		System.out.println("\nShow " + con1);

		System.out.println("\nShow remove iterator \n: " + con1);
		Iterator<Object> it1 = con1.iterator();
		while (it1.hasNext()) {
			it1.next();
		}

	}
}
